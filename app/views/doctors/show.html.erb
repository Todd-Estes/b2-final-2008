<h2>Dr. <%= @doctor.name %></h2>


<p>Specialty: <%= @doctor.specialty %></p>
<p>Doctorate: <%= @doctor.university %></p>
<p>Hospital: <%= @doctor.hospital.name %></p>

<h3>Patients</h3>
<ul>
  <% @doctor.patients.each do |patient| %>
  <div id='patient-<%= patient.id %>'>
    <li><%=patient.name %><%= button_to "Remove Patient", "/doctors/#{@doctor.id}/appointments/#{patient.id}", method: :delete %></li>
  </div>
  <% end %>
</ul>
